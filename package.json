{
  "name": "design-editor",
   "private": false,
  "version": "0.1.0",
  "type": "module",
   "description": "A high-performance WebGPU-based design editor",
     "main": "./dist/design-editor.umd.js",
  "module": "./dist/design-editor.es.js",
  "types": "./dist/index.d.ts",
   "exports": {
    ".": {
      "import": "./dist/design-editor.es.js",
      "require": "./dist/design-editor.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:all": "npm run build:types && npm run build"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@webgpu/types": "^0.1.69",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    }
  },
  "dependencies": {
    "gl-matrix": "^3.4.4"
  },
    "keywords": [
    "webgpu",
    "design",
    "editor",
    "graphics",
    "canvas",
    "svg",
    "psd",
    "pdf"
  ],
   "author": "canzoneyu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/canzoneyu/design-editor.git"
  },
  "bugs": {
    "url": "https://github.com/canzoneyu/design-editor/issues"
  }
}
